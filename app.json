{
  "expo": {
    "name": "Talky",
    "slug": "Talky",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./src/assets/splash/splash-bg.png",
      "resizeMode": "contain",
      "backgroundColor": "#FFFEF6"
    },
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./src/assets/splash/splash-bg.png",
        "backgroundColor": "#FFFEF6"
      },
      "edgeToEdgeEnabled": true
    },
    "web": {
      "favicon": "./assets/favicon.png"
    }
  }
}
